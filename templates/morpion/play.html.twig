{% extends 'base.html.twig' %}

{% block stylesheet %}
	<link href="{{ asset('styles/cell.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

	<div class="container text-center">
		<div class="row">
			<div class="col-12 mt-5">
				<p>Au tour de</p>
				<img src="{{ asset('images/circle.png') }}" class="card-img-top img-cell cell-turn" alt="question mark">
			</div>
		</div>
		<div class="row">
			<div class="col-12 mt-5">
				{% for i in 0..2 %}
					<div class="line">
						{% for j in 0..2 %}
							<div class="cell" style="width: 100px; height: 100px">
								{% if grid.cells[i][j].symbol == 'cross' %}
									<img src="{{ asset('images/cross.png') }}" class="card-img-top grow" alt="question mark">
								{% elseif grid.cells[i][j].symbol == 'circle' %}
									<img src="{{ asset('images/circle.png') }}" class="card-img-top grow" alt="question mark">
								{% else %}
									<a href="{{ path('app_morpion_play', {'cell': j ~ '-' ~ i}) }}">
										<img src="{{ asset('images/cell.png') }}" class="card-img-top grow" alt="question mark">
									</a>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endfor %}

			</div>
		</div>
	</div>

{% endblock %}
